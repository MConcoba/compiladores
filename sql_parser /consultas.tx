CREATE DATABASE mi_base_de_datos;
CREATE TABLE empleados (
    id SERIAL PRIMARY KEY,
    nombre VARCHAR(50),
    edad INT,
    puesto VARCHAR(50),
    salario DECIMAL(10, 2)
);

SELECT nombre, edad FROM empleados;
SELECT * FROM empleados WHERE edad > 30;
